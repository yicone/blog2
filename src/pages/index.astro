---
import { ViewTransitions } from 'astro:transitions';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';

const posts = (await getCollection('blog'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<!doctype html>
<html lang="en" data-theme="nord">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <ViewTransitions />
  </head>
  <body>
    <Header title={SITE_TITLE} />
    <main>
      <div class="prose prose-lg max-w-none">
        <!-- Hero Section -->
        <div class="hero py-8">
          <div class="hero-content flex-col lg:flex-row-reverse gap-8">
            <img
              src="/blog-placeholder-about.jpg"
              class="max-w-sm rounded-lg shadow-2xl w-full lg:w-1/3"
              alt="Yicone"
            />
            <div class="lg:w-2/3">
              <h1 class="text-4xl font-bold mb-4">Hello, I'm Yicone ðŸ‘‹</h1>
              <p class="text-xl opacity-90 mb-6">
                A Software Architect and Full-stack Developer passionate about
                building elegant solutions. I write about code, architecture,
                and the tools I use.
              </p>
              <div class="flex gap-4">
                <a href="/about" class="btn btn-primary">More About Me</a>
                <a href="/tech-stacks" class="btn btn-outline">My Tech Stack</a>
              </div>
            </div>
          </div>
        </div>

        <div class="divider"></div>

        <!-- Latest Posts Section -->
        <section class="my-12">
          <h2 class="text-2xl font-bold mb-6 flex justify-between items-end">
            <span>Latest Posts</span>
            <a
              href="/blog"
              class="text-base font-normal link link-hover opacity-70"
              >View all &rarr;</a
            >
          </h2>
          <div class="grid gap-6 md:grid-cols-3">
            {
              posts.map((post) => (
                <a
                  href={`/blog/${post.id}/`}
                  class="card bg-base-100 shadow-md hover:shadow-xl transition-all no-underline"
                >
                  <figure>
                    <img
                      src={post.data.heroImage}
                      alt={post.data.title}
                      class="h-48 w-full object-cover"
                    />
                  </figure>
                  <div class="card-body p-4">
                    <h3 class="card-title text-lg m-0 mb-2 leading-tight">
                      {post.data.title}
                    </h3>
                    <p class="text-sm opacity-70 m-0">
                      <FormattedDate date={post.data.pubDate} />
                    </p>
                  </div>
                </a>
              ))
            }
          </div>
        </section>

        <div class="divider"></div>

        <!-- Indie Products Section -->
        <section class="my-12">
          <h2 class="text-2xl font-bold mb-6">Indie Products</h2>
          <div class="grid gap-4">
            <div class="card bg-base-100 shadow-sm border border-base-200">
              <div class="card-body">
                <h3 class="card-title text-xl">
                  <a
                    href="https://sharegpt.vip"
                    target="_blank"
                    class="no-underline hover:text-primary"
                  >
                    ShareGPT.vip
                  </a>
                </h3>
                <p>A web app that allows you to chat with GPT models.</p>
              </div>
            </div>

            <div class="card bg-base-100 shadow-sm border border-base-200">
              <div class="card-body">
                <h3 class="card-title text-xl">
                  <a
                    href="https://marketplace.visualstudio.com/items?itemName=yicone.highlight-inline-sql"
                    target="_blank"
                    class="no-underline hover:text-primary"
                  >
                    Highlighting Inline SQL and PRQL
                  </a>
                </h3>
                <p>A VS Code extension that highlights inline SQL and PRQL.</p>
              </div>
            </div>
          </div>
        </section>
      </div>
    </main>
    <Footer />
  </body>
</html>
