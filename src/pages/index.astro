---
import { ViewTransitions } from 'astro:transitions';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../components/FormattedDate.astro';

const posts = (await getCollection('blog'))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<!doctype html>
<html lang="en" data-theme="nord">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <ViewTransitions />
  </head>
  <body>
    <Header title={SITE_TITLE} />
    <main class="container mx-auto px-4 max-w-6xl">
      <!-- Hero Section -->
      <div class="hero py-12 mb-12">
        <div
          class="hero-content flex-col lg:flex-row-reverse gap-12 items-center"
        >
          <img
            src="/blog-placeholder-about.jpg"
            class="max-w-sm rounded-lg shadow-2xl w-full lg:w-1/3 object-cover aspect-square"
            alt="Yicone"
          />
          <div class="lg:w-2/3 prose prose-lg">
            <h1 class="text-4xl font-bold mb-4 not-prose">
              Hello, I'm Yicone ðŸ‘‹
            </h1>
            <p class="text-xl opacity-90 mb-8 not-prose">
              A Software Architect and Full-stack Developer passionate about
              building elegant solutions. I write about code, architecture, and
              the tools I use.
            </p>
            <div class="flex gap-4 not-prose">
              <a href="/about" class="btn btn-primary text-white"
                >More About Me</a
              >
              <a href="/tech-stacks" class="btn btn-outline">My Tech Stack</a>
            </div>
          </div>
        </div>
      </div>

      <!-- Latest Posts Section -->
      <section class="my-16">
        <div class="flex justify-between items-end mb-8">
          <h2 class="text-3xl font-bold">Latest Posts</h2>
          <a href="/blog" class="btn btn-ghost btn-sm">View all &rarr;</a>
        </div>
        <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
          {
            posts.map((post) => (
              <a
                href={`/blog/${post.id}/`}
                class="card bg-base-100 shadow-xl hover:shadow-2xl transition-all duration-300 no-underline group"
              >
                <figure class="px-4 pt-4">
                  <img
                    src={post.data.heroImage}
                    alt={post.data.title}
                    class="rounded-xl h-48 w-full object-cover group-hover:scale-105 transition-transform duration-300"
                  />
                </figure>
                <div class="card-body">
                  <h3 class="card-title text-xl leading-tight group-hover:text-primary transition-colors">
                    {post.data.title}
                  </h3>
                  <p class="text-sm opacity-70 mt-2">
                    <FormattedDate date={post.data.pubDate} />
                  </p>
                </div>
              </a>
            ))
          }
        </div>
      </section>

      <!-- Indie Products Section -->
      <section class="my-16">
        <h2 class="text-3xl font-bold mb-8">Indie Products</h2>
        <div class="grid gap-6 md:grid-cols-2">
          <a
            href="https://sharegpt.vip"
            target="_blank"
            class="card bg-base-100 shadow-md hover:shadow-xl transition-all border border-base-200 no-underline hover:border-primary"
          >
            <div class="card-body">
              <h3 class="card-title text-xl text-primary">
                ShareGPT.vip
                <div class="badge badge-secondary badge-outline text-xs">
                  Web App
                </div>
              </h3>
              <p class="opacity-80">
                A web app that allows you to chat with GPT models.
              </p>
            </div>
          </a>

          <a
            href="https://marketplace.visualstudio.com/items?itemName=yicone.highlight-inline-sql"
            target="_blank"
            class="card bg-base-100 shadow-md hover:shadow-xl transition-all border border-base-200 no-underline hover:border-primary"
          >
            <div class="card-body">
              <h3 class="card-title text-xl text-primary">
                Inline SQL Highlight
                <div class="badge badge-accent badge-outline text-xs">
                  VS Code
                </div>
              </h3>
              <p class="opacity-80">
                A VS Code extension that highlights inline SQL and PRQL.
              </p>
            </div>
          </a>
        </div>
      </section>
    </main>
    <Footer />
  </body>
</html>
